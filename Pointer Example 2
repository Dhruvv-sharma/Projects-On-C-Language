// W.A.Function to find a Maximum number between two numbers using pointer.
#include<stdio.h>
int Max(int *a , int *b);
int main()
{
    int a,b;
    printf("Enter number for a :");
    scanf("%d",&a);
    printf("Enter number for b :");
    scanf("%d",&b);
    Max(&a,&b);
    return 0;
}
int Max(int *a , int *b)
{
    if( *a > *b )
    {
        printf("A is maximum.");
    }
    else if( *b > *a)
    {
        printf("B is maximum.");
    }
}
