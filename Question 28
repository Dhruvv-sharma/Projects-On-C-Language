#include <stdio.h>
#include <ctype.h>
int main() {
    char str[100];
    int count = 0;
    printf("Enter a string: ");
    gets(str); // use fgets in modern C for safer input
    for (int i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]);
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            count++;
        }
    }
    printf("Number of vowels: %d\n", count);
    return 0;
}
